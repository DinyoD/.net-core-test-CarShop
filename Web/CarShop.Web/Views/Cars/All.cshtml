@using CarShop.Web.ViewModels.Cars

@model AllCarsViewModel

<h1 class="text-center mt-2">My Cars</h1>
<div class="row mt-2 mb-4">

    @foreach (var item in @Model.MyCars)
    {

        <div class="card col-6 col-lg-3 game-card">
            <img src="@item.PictureUrl"
                 class="card-img-top img-fluid card-image rounded" data-toggle="tooltip"
                 data-placement="bottom" title="2017 Ford-GT">
            <div class="card-body">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item text-center">Plate # @item.PlateNumber.</li>
                    <li class="list-group-item">
                        <span class="bg-danger col-sm">Remaining Issues: @item.RemainingIssues</span>
                        <span class="bg-success col-sm">Fixed Issues: @item.FixedIssues</span>
                    </li>
                </ul>
                <a asp-controller="Issues" asp-action="CarIssues" asp-route-id="@item.Id" asp-route-model="@item.Model" class="btn btn-block btn-primary">Check issues</a>
            </div>
        </div>
    }


</div>
