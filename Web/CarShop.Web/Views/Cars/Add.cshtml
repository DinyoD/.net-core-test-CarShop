@using CarShop.Web.ViewModels.Cars
@model CarsInputModel

<h1 class="text-center mt-2">Add a new car</h1>
<div class="row mt-4 mb-4">
    <div id="card" class="card col-6 col-lg-3 game-card h-100 m-auto">
        <img id="card-image"
             src="https://s1.cdn.autoevolution.com/images/news-pictures-600x/opel-teases-mystery-car-ahead-of-moscow-show-85300-7.jpg"
             class="card-img-top img-fluid card-image">

    </div>

    <form class="col-6 col-lg-9" method="post">

        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group">
            <label asp-for=@Model.Model></label>
            <input asp-for=@Model.Model type="text" class="form-control" id="model-input">
            <span asp-validation-for=@Model.Model class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for=@Model.Year></label>
            <input asp-for=@Model.Year type="number" class="form-control" id="year-input">
            <span asp-validation-for=@Model.Year class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for=@Model.PictureUrl></label>
            <input asp-for=@Model.PictureUrl type="text" class="form-control" id="image-input">
            <span asp-validation-for=@Model.PictureUrl class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for=@Model.PlateNumber></label>
            <input asp-for=@Model.PlateNumber type="text" class="form-control" id="plateNumber-input">
            <span asp-validation-for=@Model.PlateNumber class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-block btn-primary">Add Car</button>
    </form>
</div>
