@using CarShop.Web.ViewModels.Issues
@model IssuesInputModel

<h1 class="text-center mt-2">Please describe the new Issue you'd like to add.</h1>
<hr class="bg-primary w-75">
<form class="mx-auto w-50" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <div class="text-dark d-flex justify-content-center">
            <label asp-for=@Model.Descripition class="h3 mb-2 text-white"></label>
        </div>
        <textarea row="20" class="form-control" asp-for=@Model.Descripition></textarea>
        <span asp-validation-for=@Model.Descripition class="text-danger"></span>
    </div>
    <input type="text" hidden asp-for=@Model.CarId />
    <div class="d-flex justify-content-center">
        <button type="submit" class="btn btn-block btn-primary text-white mb-3">Add</button>
    </div>
</form>
